{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "os:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    "process:default",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:default",
    "tcp:allow-connect",
    "tcp:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.*.*:*/*"
        }
      ]
    },
    "http:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "https://**"
        },
        {
          "path": "http://**"
        }
      ]
    }
  ]
}